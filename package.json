{
  "name": "discord-bot-node",
  "version": "2.0.0-SNAPSHOT",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "precommit": "tslint -c tslint.json -p tsconfig.json",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node ./bin/www",
    "serve": "nodemon",
    "test": "node --version"
  },
  "dependencies": {
    "bufferutil": "^4.0.8",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "debug": "~4.3.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "morgan": "~1.10.0",
    "socket.io": "^4.7.5",
    "ytdl-core": "4.11.5",
    "ytpl": "^2.3.0",
    "@distube/ytsr": "^2.0.4",
    "discord.js": "^14.15.3",
    "@discordjs/voice": "^0.17.0",
    "@discordjs/opus": "^0.9.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "2.1.3",
    "libsodium-wrappers": "^0.7.13",
    "he": "^1.2.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "2.1.21",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/cors": "^2.8.17",
    "@types/he": "^1.2.3",
    "nodemon": "^3.1.4",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3",
    "source-map-support": "^0.5.21"
  },
  "nodemonConfig": {
    "delay": 2500,
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "dist",
      "client"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
